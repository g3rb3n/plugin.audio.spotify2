<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.spotify2"
       name="Spotify"
       version="0.0.1"
       provider-name="g3rb3n">
    <requires>
		<import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.9.1"/>
        <import addon="script.module.urllib3" version="1.26"/>
    </requires>
	<extension point="xbmc.python.pluginsource" library="lib/plugin.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.service" library="lib/service.py" start="start"/>
    <extension point="xbmc.addon.metadata">
        <summary>Spotify client</summary>
        <description>Spotify client</description>
        <license>Apache 2.0</license>
        <source>https://github.com/g3rb3n/plugin.audio.spotify2</source>
        <platform>linux</platform>
        <assets>
            <icon>resources/media/icon.png</icon>
            <fanart>resources/media/fanart.png</fanart>
        </assets>
    </extension>
</addon>
